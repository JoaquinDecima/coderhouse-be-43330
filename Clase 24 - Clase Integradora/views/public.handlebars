<section class='container-fluid'>
	{{#each posts}}
		<div class='row bg-light login-section text-center'>
			<div class='col-12'>
				<div class='row'>
					<div class='col-2'>
						<img
							src='{{user.img}}'
							alt='logo'
							class='img-fluid'
							style='max-width: 100px; border-radius: 100%'
						/>
					</div>
					<div class='col-10'>
						<h4>{{user.username}}</h4>
						<p>{{content}}</p>
					</div>
				</div>
			</div>
		</div>
	{{/each}}
</section>